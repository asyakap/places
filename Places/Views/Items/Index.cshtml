<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>My places</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
  @using Places.Models;

  <h1>Places I visited</h1>

  @if (Model.Count == 0)
  {
    <p>There are no places in the list.</p>
  }
  <ul>
    @foreach (Item item in Model)
    {
      <li><a href='/items/@item.Id'>@item.CityName</a></li>
    }
  </ul>
  <a href="/items/new">Add a new place</a>
<br>
<br>
  <form action="/items/delete" method="post">
    <button type="submit" name="button">Clear All Places</button>
  </form> 

</body>

</html>